<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fernando.menudeslisante.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_gravity="bottom">

        <EditText
            android:id="@+id/editUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:drawableLeft="@drawable/usuario"
            android:ems="10"
            android:textColor="#3A89B7"
            android:inputType="textPersonName"
            android:text="UsuÃ¡rio" />

        <EditText
            android:id="@+id/editSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:textColor="#3A89B7"
            android:drawableLeft="@drawable/senha"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Senha" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonLogin"
        style="@style/ButtonVermelho"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:onClick="onCLick"
        android:text="entrar"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="276dp"
        android:src="@drawable/logo" />


</FrameLayout>
